{% extends 'base.html.twig' %}

{% block title %} Blog Jstore {% endblock %}

{% block body %}

    <div class="articles-infos">
        <b>{{ articles | length}}</b> articles retrouv√©s
    </div>
    <div class="articles">
        {% for article in articles %}
            {# <a href="article/{{article.slug}}" class="article-item"> #}
            <a href="{{ path('app_single_article', {'slug':article.slug}) }}" class="article-item">
                <div class="article-image">
                    <img src={{ article.imageUrl }} width="300" height="300" alt="Image de l'article : {{ article.title }}"> <br>
                </div>
                <div class="article-details flex">
                    <div class="article-author-details">
                        <div class="article-author-picture">
                            <img src={{ article.author.profile.picture }} width="50" height="50" alt="Image de profile de  : {{ article.author.fullname }}"> <br>
                        </div>
                    </div>
                    <div class="article-content-details">
                        <h2 class="article-title">{{ article.title }}</h2>
                        <div class="article-createdAt">{{ article.fromNow }} </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
