{% extends 'base.html.twig' %}

{% block title %} Article {{ article.title }} {% endblock %}

{% block body %}

    <div class="single-article">
        <div class="article-image">
            <img src={{ article.imageUrl }} width="700" height="300" alt="Image de l'article : {{ article.title }}"> <br>
        </div>
        <div class="article-details flex">
            <div class="article-author-details">
                <div class="article-author-picture">
                    <img src={{ article.author.profile.picture }} width="50" height="50" alt="Image de profile de  : {{ article.author.fullname }}"> <br>
                </div>
            </div>
            <div class="article-content-details">
                <h2 class="article-title">{{ article.title }}</h2>
                <div class="article-createdAt">{{ article.fromNow }} </div>
                <div class="article-categories flex wrap">
                    {% for category in article.categories %}
                        <div class="article-category-item badge">
                            <a href="{{ path('app_articles_by_category', { 'slug': category.slug }) }}">{{ category.name }} ({{ category.articles | length }} article(s) publi√©(s))</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <p>{{ article.content }}</p>
    </div>

{% endblock %}
