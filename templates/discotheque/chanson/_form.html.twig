{{ form_start(form) }}
    <form>
    <fieldset>
        {{ form_row(form._token) }}
        <div class="form-group row mb-2">
            <label for="nom" class="col-sm-2 form-label">Nom de la chanson</label>
            <div class="col-sm-10">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}, 'id': 'nom'}) }}
                {{ form_errors(form.nom, {'attr': {'class': 'form-text text-muted'}, "aria-describedby": "nomHelp"}) }}
                <small id="nomHelp" class="form-text text-muted">Le nom de la chansson ne doit pas dépasser 25 caractères.</small>
            </div>
        </div>

        <div class="form-group row mb-2">
            <label for="dateSortie" class="col-sm-2 form-label">Date de sortie</label>
            <div class="col-sm-10">
                {{ form_widget(form.dateSortie, {'attr': {'class': 'form-control'}, 'id': 'dateSortie'}) }}
                {{ form_errors(form.dateSortie, {'attr': {'class': 'form-text text-muted'}}) }}
            </div>
        </div>

        <div class="form-group row">
            <label for="artistes" class="col-sm-2 col-form-label">Artiste</label>
            <div class="col-sm-10">
                {% for artiste in form.artistes %}
                    <div class="form-check">
                        {{ form_widget(artiste, {'attr': {'class': 'form-check-input'}, 'id': 'artiste_'~loop.index}) }}
                        {{ form_label(artiste, null, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}, 'id': 'artiste_'~loop.index}, {'for_attr': 'artiste_'~loop.index}) }}
                    </div>
                {% endfor %}
                {{ form_errors(form.artistes, {'attr': {'class': 'form-text text-muted'}}) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary mb-2">{{ button_label|default('Enregistrer') }}</button>
    </fieldset>
    </form>
{{ form_end(form) }}