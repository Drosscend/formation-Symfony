{% extends './test_twig/base.html.twig' %}

{% block title %} Home - Welcome {% endblock %}

{% block header %}
    {% include './test_twig/header/header-red.html.twig' %}
{% endblock %}

{% block container %}
    <ul class="users">
        {% for user in users %}
            <li class="user-item">
                <div class="user-picture">
                    <img src="{{ user.cover }}" width="300" height="300" alt="image de {{ user.full_name }}" >
                </div>
                <div class="user-details">
                    <div class="user-image">
                        <img src="{{ user.picture }}" width="300" height="300" alt="image de {{ user.full_name }}" >
                    </div>
                    <div class="user-names">
                        <h2>{{ user.full_name }}</h2>
                        <div class="createdAt">{{ user.createdAt | date('d/m/Y H:i:s') }}</div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}